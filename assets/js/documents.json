{% assign counter = 0 %}
[{% for page in site.pages %}{% if page.url contains '.xml' or page.url contains 'assets' or page.url contains 'category' or page.url contains 'tag' %}{% else %}{
    "id": {{ counter }},
    "url": "{{site.url}}{{ page.url }}",
    "title": "{{ page.title }}",
    "body": {{ page.content | strip_html | strip_newlines | truncatewords: 35, "" | jsonify }}{% assign counter = counter | plus: 1 %}
    }, {% endif %}{% endfor %}{% for page in site.without-plugin %}{
    "id": {{ counter }},
    "url": "{{site.url}}{{ page.url }}",
